<li>
  <% if !Query.last.blank? && !@last_movies.blank? %>
    <a href="<%= query_path(Query.last) %>">Nuovi film
      <span class="new badge"><%= @last_movies.count %></span>
    </a>
  <% end %>
</li>
<li><%= link_to 'Cerca', new_query_path %></li>
<li><%= link_to 'Film', movies_path %></li>
<li><%= link_to 'Utenti', viewers_path %></li>
<% if user_signed_in? %>
  <li>
    <a class="dropdown-button" href="#!" data-activates="<%= data %>">
      <%= current_user.name.blank? ? "Profilo" : current_user.name.split.map(&:capitalize).join(" ") %>
      <i class="material-icons right">arrow_drop_down</i>
    </a>
  </li>
<% else %>
  <% if request.fullpath != new_user_registration_path %>
    <li><%= link_to 'Sign up', new_user_registration_path %></li>
  <% end %>
  <% if request.fullpath != new_user_session_path %>
    <li><%= link_to 'Log in', new_user_session_path %></li>
  <% end %>
<% end %>
