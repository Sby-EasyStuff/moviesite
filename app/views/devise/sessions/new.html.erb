<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="col s12">
      <div class="row">
        <div class="input-field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          <%= f.label :email %>
        </div>
      </div>
      <div class="row">
        <div class="input-field">
          <%= f.password_field :password, autocomplete: "off" %>
          <%= f.label :password %>
        </div>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="row">
          <p>
            <%= f.check_box :remember_me, class: "filled-in" %>
            <%= f.label :remember_me %>
          </p>
        </div>
      <% end %>

      <div class="row">
        <div class="actions">
          <%= f.submit "Log in", class: "wave-effect wave-light btn blue accent-1" %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= render 'layouts/oauth' %>
