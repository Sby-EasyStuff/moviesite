<div class="row">
  <div class="col s10 l12">
    <h2>Modifica Account</h2>
  </div>
</div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="col s12">
      <div class="input-field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        <%= f.label :email %>
      </div>
      <div class="input-field">
        <%= f.password_field :password, autocomplete: "off" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> caratteri minimo</em>
        <% end %>
        <%= f.label :password do %>
          Nuova password
        <% end %>
      </div>
      <div class="input-field">
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
        <%= f.label "Conferma password" %>
      </div>
      <div class="input-field">
        <%= f.password_field :current_password, autocomplete: "off" %>
        <%= f.label :current_password do %>
          Password attuale
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="actions">
      <%= f.submit "Salva", class: "wave-effect wave-light btn blue accent-1" %>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col s10">
    <h3>Elimina account</h3>
  </div>
</div>
  <%= form_for(resource, as:resource_name, url: user_registration_path,
         method: :delete) do |f| %>

  <div class="row">
    <p>Vuoi eliminare l'account?</p>
    <a href="#" id="delete" class="red darken-2 waves-effect btn">Elimina</a>
    <div id="confirm" class="hidden">
      <div class="action">
        <a href="#" id="cancel" class="waves-effect wave-light btn">Annulla</a>
        <%= f.submit "Conferma", class: 'red darken-2 waves-effect btn' %>
      </div>
    </div>
  </div>
  <% end %>

  <div class="row">
    <%= link_to "Indietro", :back, class: 'waves-effect waves-light btn blue accent-1' %>
  </div>
