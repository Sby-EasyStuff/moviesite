<h2>Edit account</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="col s12">
      <div class="input-field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        <%= f.label :email %>
      </div>
      <div class="input-field">
        <%= f.password_field :password, autocomplete: "off" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
        <%= f.label :password do %>
          Password <i>(leave blank to keep the actual password)</i>
        <% end %>
      </div>
      <div class="input-field">
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
          <%= f.label :password_confirmation %>
      </div>
      <div class="input-field">
        <%= f.password_field :current_password, autocomplete: "off" %>
        <%= f.label :current_password do %>
          Current password <i>(needed to confirm your changes)</i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="actions">
      <%= f.submit "Update", class: "wave-effect wave-light btn blue accent-1" %>
    </div>
  </div>
<% end %>

<h3>Cancel my account</h3>

  <%= form_for(resource, as:resource_name, url: user_registration_path,
         method: :delete) do |f| %>

  <div class="row">
    <p >Want to delete your account?</p>
    <a href="#" id="delete" class="red darken-2 waves-effect btn">Delete</a>
    <div id="confirm" class="hidden">
      <div class="action">
        <a href="#" id="cancel" class="waves-effect wave-light btn">Cancel</a>
        <%= f.submit "Confirm", class: 'red darken-2 waves-effect btn' %>
      </div>
    </div>
  </div>
  <% end %>

  <div class="row">
    <%= link_to "Back", :back, class: 'waves-effect waves-light btn blue accent-1' %>
  </div>
