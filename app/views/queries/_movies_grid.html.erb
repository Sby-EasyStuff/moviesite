<% if @movies.blank? %>
  <h3>Nessun film aggiunto</h3>
<% else %>
  <div class="col s10 l12">
    <h3>Film aggiunti di recente</h3>
    <% @movies.each do |movie| %>
      <div class="col s12 l4">
        <div class="card">
          <div class="card-image waves-effect waves-block waves-light">
            <% if movie.poster_path.blank? %>
              <%= image_tag "no_poster.jpg", class:"activator" %>
            <% else %>
              <img class="activator" src="<%= movie.poster_path %>">
            <% end %>
          </div>
          <div class="card-content">
            <span class="card-title activator grey-text text-darken-4 truncate"><%= movie.title %><i class="material-icons right">more_vert</i></span>
            <p><%= link_to "Link alla pagina", movie_path(movie.id) %></p>
          </div>
          <div class="card-reveal">
            <span class="card-title grey-text text-darken-4"><%= movie.title %><i class="material-icons right">close</i></span>
            <p><%= movie.overview %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
