<div class="row">
  <div class="col s12">
    <%= form_tag "/queries", method: "get" do %>
      <div class="row">
        <div class="col s6 input-field">
          <%= search_field_tag :query %>
          <%= label_tag :query %>
        </div>
      </div>

      <div class="row">
        <div class="action col s6">
          <%= button_tag :search, class: "wave-effect wave-light btn blue accent-1" %>
        </div>
        <div class="col s6">
          <%= link_to "Esegui una nuova ricerca esterna", new_query_path %>
        </div>
      </div>
    <% end %>
  </div>
</div>
