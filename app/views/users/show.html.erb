<h1>Benvenuto nel tuo profilo <%= current_user.name %></h1>

<div class="row">
  <div class="col s6">
    <div class="row">
      <div class="col s12">
        <% if !current_user.name.blank? %>
          <p>
            Nome: <%= current_user.name %>
          </p>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col s12">
        <p>
          Email: <%= current_user.email %>
        </p>
      </div>
    </div>
  </div>
  <div class="col s6">
    <div class="row">
      <div class="col s12">
        <% if !current_user.photo.blank? %>
          <%= image_tag current_user.photo %>
        <% end %>
      </div>
    </div>
  </div>
</div>
