<div class="row">
  <div class="col s12">
    <div class="row">
      <div class="input-field col s12">
        <%= form_for [ movie, Comment.new ], remote: true do |form| %>
          <%= form.text_area :body, class: "materialize-textarea" %><br>
          <%= form.label :"Scrivi un commento" %>
          <div class="row">
            <div class="action">
              <%= form.submit 'Commenta', class: "wave-effect wave-light btn blue accent-1" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  $('#body').val('New Text');
  M.textareaAutoResize($('#body'));
</script>
