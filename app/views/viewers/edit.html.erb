<div class="row">
  <div class="col s10 l12">
    <h2>Modifica profilo</h2>
  </div>
</div>
<%= form_for(@viewer, as: :viewer, method: :patch, url: viewer_path(@viewer)) do |f| %>

  <div class="row">
    <div class="col s11 l12">
      <div class="row">
        <div class="input-field">
          <%= f.text_field :photo %>
          <%= f.label :photo, "Inserisci l'URL della foto" %>
        </div>
      </div>
      <div class="row">
        <div class="input-field">
          <%= f.text_field :name %>
          <%= f.label :name %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="action">
      <%= f.submit "Salva", class: "wave-effect wave-light btn blue accent-1" %>
    </div>
  </div>

<% end %>
