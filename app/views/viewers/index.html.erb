<div class="row">
  <div class="col s10 l12">
    <h2>Utenti registrati</h2>
  </div>
</div>

<div class="row">
  <% @viewers.each do |viewer| %>
    <div class="col s12 l4">
      <div class="card blue-grey lighten-1">
        <div class="card-content white-text">
          <div class="valign-wrapper">
            <% if viewer.photo.blank? %>
              <%= image_tag "no_image.jpg", class: "circle responsive-image card-profile-image" %>
            <% else %>
              <img src="<%= viewer.photo %>" alt="Foto profilo" class="circle responsive-image card-profile-image">
            <% end %>
          </div>
          <span class="card-title">
            <% if viewer.name.blank? %>
              Anonimo
            <% else %>
              <%= viewer.name %>
            <% end %>
          </span>
            <p><i>Email: </i><%= viewer.email %></p>
        </div>
        <div class="card-action">
          <%= link_to "Link al profilo", viewer_path(viewer) %>
        </div>
      </div>
    </div>
  <% end %>
</div>
